{
  "kind": "collectionType",
  "collectionName": "people",
  "info": {
    "name": "Person"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "first_name": {
      "type": "string"
    },
    "last_name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "birth_date": {
      "type": "date"
    },
    "death_date": {
      "type": "date"
    },
    "links": {
      "collection": "link",
      "via": "people",
      "dominant": true
    },
    "book_reviews": {
      "via": "authors",
      "collection": "book-review",
      "dominant": true
    },
    "slug": {
      "type": "string"
    },
    "quotes": {
      "collection": "quotes",
      "via": "person"
    },
    "public": {
      "type": "boolean"
    },
    "comment_thread": {
      "model": "comment-threads",
      "via": "person"
    },
    "opinion": {
      "type": "richtext"
    },
    "homepage": {
      "model": "link"
    }
  }
}
